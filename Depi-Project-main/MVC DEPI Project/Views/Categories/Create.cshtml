@model MVC_DEPI_Project.Models.Entities.Category

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/styles.css">
    <link href="~/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
</head>



<div class="row">
    <div class="col-lg-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="input-group mb-5">
                <span class="input-group-text">Description</span>
                <textarea class="form-control" aria-label="With textarea"></textarea>
            </div>

            <div class="input-group mb-5">
                <input type="file" class="form-control" id="inputGroupFile02" name="ImageFile">
                <label class="input-group-text" for="inputGroupFile02">Upload Photo</label>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-info" />
            </div>

            <div>
                <a class="btn bg-info text-light" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
