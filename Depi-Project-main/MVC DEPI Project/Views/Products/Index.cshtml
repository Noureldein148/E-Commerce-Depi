@model IEnumerable<MVC_DEPI_Project.Models.Entities.Product>

@{
    ViewData["Title"] = "Index";
     Layout = "~/Views/Shared/MyLayout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/styles.css">
    <link href="~/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
</head>



<div class="container-fluid pt-5 pb-3">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Featured Products</span></h2>
    <div class="row px-xl-5">

        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
                <div class="product-item bg-light mb-4 h-auto">
                    <div class="product-img position-relative overflow-hidden">
                        @if (!string.IsNullOrEmpty(item.ImagePath))
                        {
                            <img class="img-fluid w-100" src="@item.ImagePath" alt="@item.Name" />
                        }
                        else
                        {
                            <img class="img-fluid w-100" src="~/images/products/default.png" alt="No Image" />
                        }
                        <div class="product-action">
                            <a class="btn btn-square" asp-action="Details" asp-route-id="@item.ID">
                                <i class="border border-0 fa fa-search fw-bold text-info" style="font-size: 100px; background:transparent;"></i>
                            </a>
                        </div>
                    </div>
                    <div class="text-center py-4">
                        <a class="h6 text-decoration-none text-truncate" href="#">@Html.DisplayFor(modelItem => item.Name)</a>
                        <div class="d-flex align-items-center justify-content-center mt-2">
                            <h5>$@Html.DisplayFor(modelItem => item.Price)</h5>
                        </div>
                        <div class="mt-2">
                            <a asp-action="Delete" asp-route-id="@item.ID" class="border border-2 p-2 me-1 bg-danger fw-bold">X</a>
                            <a asp-action="Edit" asp-route-id="@item.ID" class="border border-2 p-2 bg-info text-light">Edit</a>
                        </div>
                    </div>
                </div>
            </div>
        }

        <div class="offset-lg-3 col-lg-8 col-md-8 col-sm-8 pb-1 d-flex justify-content-end my-5">
            <a asp-action="Create" class="btn btn-info Creation">Create New</a>
        </div>

        
    </div>
</div>
