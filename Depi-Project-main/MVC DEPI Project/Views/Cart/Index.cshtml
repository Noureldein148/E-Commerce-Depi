@model MVC_DEPI_Project.Models.Entities.Cart

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}
<head>
    <link rel="stylesheet" href="~/css/styles.css">
    <link href="~/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
</head>

<h1 class="mb-5">Your Cart</h1>

<!-- Cart Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-lg-8 table-responsive mb-5">
            <table class="table table-light table-borderless table-hover text-center mb-0">
                <thead class="thead-dark">
                    <tr>
                        <th>Products</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th>Remove</th>
                    </tr>
                </thead>
                <tbody class="align-middle">

                    @foreach (var item in Model.Cartitems)
                    {
                        <tr>
                            <td>@item.Product.Name</td>
                            <td>@item.Product.Price</td>
                            <td>@item.Quantity</td>
                            <td>@item.Total</td>
                            <td>
                                <form method="post" asp-action="RemoveFromCart" asp-route-productId="@item.ProductId">
                                    <button type="submit" class="btn btn-danger"><i class="fa fa-times"></i></button>
                                </form>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
        <div class="col-lg-4">
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-body-secondary pr-3">Cart Summary</span></h5>
            <div class="bg-light p-30 mb-5">
                <div class="border-bottom pb-2">
                    <div class="d-flex justify-content-between mb-3">
                        <h6>Subtotal</h6>
                        <h6>@Model.Subtotal</h6>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h6>Shipping</h6>
                        <h6>@Model.Shipping</h6>
                    </div>
                </div>
                <div class="pt-2">
                    <div class="d-flex justify-content-between mt-2">
                        <h6>Total</h6>
                        <h6>@Model.Total</h6>
                    </div>
                    @* <button id="Checkout" asp-controller="Home" asp-action="Addtocart" onClick="CheckOut()" >Proceed To Checkout</button> *@
                    <a asp-controller="Order" asp-action="Checkout" class="btn btn-block btn-info font-weight-bold my-3 py-3 ">Proceed To Checkout</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Cart End -->
